{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "jasmine",
      "node",
      "trusted-types"
    ],
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}
